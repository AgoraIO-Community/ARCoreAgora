<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChannelActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ar_support_icon"/>

    <EditText
        android:id="@+id/channel_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:hint="Enter your channel name here"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:text="Channel Selection"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="290dp"
        android:visibility="gone"/>


    <RelativeLayout
        android:id="@+id/control_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp">

        <ImageView
            android:id="@+id/center"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/btn_join_streamer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onJoinButtonClicked"
            android:text="Join As Streamer!"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/center"
            />

        <Button
            android:id="@+id/btn_join_audience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onJoinButtonClicked"
            android:text="Join As Audience!"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:layout_toRightOf="@+id/center"/>


    </RelativeLayout>
</RelativeLayout>